<form class="m-editor" id="meme-editor-view">
  <div class="dropzone" id="dropzone">Arrastrar la imagen</div>
  
  <h2><label for="image-scale">Tamaño de la imagen</label></h2>
  <input id="image-scale" type="range" max="4" min=".01" step=".01" value="1">
  <select class="aspect" id="aspect">
    <option value="" disabled>Proporción</option>
  </select>
  <!--h2>Tamaño del lienzo</h2-->
  <!--h2><label for="height">Altura</label></h2-->
  <input id="height" name="height" type="hidden" value="">
  <!--h2><label for="width">Ancho</label></h2-->
  <input id="width" name="width" type="hidden" value="">
  
  <hr>
  <h2><label for="headline">Encabezado</label></h2>
  <textarea id="headline" name="headline" type="text" value=""></textarea>
  <select class="text-align" id="text-align">
    <option value="" disabled>Alineación</option>
  </select>

  <h2><label for="font-size">Tamaño del texto</label></h2>
  <input id="font-size" type="range" max="72" min="12" step="4" value="24">

  <select class="font-family" id="font-family">
    <option value="" disabled>Fuente</option>
  </select>

  <div class="checkbox-group text-shadow">
    <input id="text-shadow" name="shadow" type="checkbox"> 
    <label for="text-shadow">Sombra del texto</label>
  </div>

  <select class="watermark" id="watermark">
    <option value="" disabled>Marca de agua</option>
  </select>
  
  <h2><label for="credit">Cita</label></h2>
  <input id="credit" name="credit" type="text" value="">

  <div class="m-editor__overlay" id="overlay">
    <h2>Color</h2>
    <ul class="checkbox-group">
      <li><label><input type="radio" name="overlay" value=""> Ninguno</label></li>
    </ul>
  </div>
</form>
